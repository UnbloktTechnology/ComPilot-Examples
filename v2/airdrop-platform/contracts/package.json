    "mocha": "^10.7.3",
    "prettier": "^2.0.5",
    "rimraf": "^6.0.1",
    "solc": "0.6.11",
    "ts-node": "^10.9.2",
    "typescript": "^5.5.4",
    "viem": "2.20.1"
  },
  "engines": {
