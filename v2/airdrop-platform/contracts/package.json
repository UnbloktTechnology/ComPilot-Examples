  ],
  "scripts": {
    "precompile": "rimraf ./build/",
    "compile": "hardhat compile",
    "generate-merkle-root": "ts-node scripts/generate-merkle-root.ts",
    "generate-merkle-root:input": "ts-node scripts/generate-merkle-root.ts --input outputFiles/allowListObj.json",
    "convert-csv-to-json": "ts-node scripts/convert-csv-to-json.ts",
    "prepare-merkle-root": "npm run convert-csv-to-json && npm run generate-merkle-root:input",
    "prepublishOnly": "npm test",
    "pretest": "npm run compile",
    "test": "hardhat test",
    "deploy-polygonAmoy": "npm run prepare-merkle-root && hardhat run ./scripts/deployTokenAndMerkleDistributor.ts --network polygonAmoy",
    "deploy-sepolia": "npm run prepare-merkle-root && hardhat run ./scripts/deployTokenAndMerkleDistributor.ts --network sepolia"
  },
  "devDependencies": {
    "@compilot/merkle-tree-js": "^2.1.10-dev",
