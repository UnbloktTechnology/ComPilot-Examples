{
  "name": "nexera-id-kyc-airdrop",
  "version": "1.0.1",
  "description": "ðŸ“¦ A smart contract that distributes a balance of tokens according to a merkle root, gated by Nexera ID",
  "keywords": [
    "nexera",
    "erc20",
    "signature gating"
  ],
  "homepage": "https://nexera.id",
  "repository": {
    "type": "git",
    "url": "https://github.com/NexeraProtocol/nexera-id-kyc-airdrop"
  },
  "author": {
    "name": "Moody Salem"
  },
  "files": [
    "build"
  ],
  "scripts": {
    "precompile": "rimraf ./build/",
    "compile": "npx hardhat compile",
    "generate-merkle-root": "ts-node scripts/generate-merkle-root.ts",
    "generate-merkle-root:input": "ts-node scripts/generate-merkle-root.ts --input outputFiles/allowListObj.json",
    "convert-csv-to-json": "ts-node scripts/convert-csv-to-json.ts",
    "prepare-merkle-root": "yarn convert-csv-to-json && yarn generate-merkle-root:input",
    "prepublishOnly": "yarn test",
    "pretest": "yarn compile",
    "test": "npx hardhat test",
    "deploy-polygonAmoy": "yarn prepare-merkle-root && yarn hardhat run ./scripts/deployTokenAndMerkleDistributor.ts --network polygonAmoy",
    "deploy-sepolia": "yarn prepare-merkle-root && yarn hardhat run ./scripts/deployTokenAndMerkleDistributor.ts --network sepolia"
  },
  "devDependencies": {
    "@openzeppelin/contracts": "4.7.0",
    "@nexeraprotocol/nexera-id-sig-gating-contracts": "^2.2.45",
    "@nexeraprotocol/nexera-id-sig-gating-contracts-sdk": "^2.0.22",
    "@nomicfoundation/hardhat-verify": "^2.0.8",
    "@nomiclabs/hardhat-ethers": "^2.0.6",
    "@nomiclabs/hardhat-waffle": "^2.0.3",
    "@types/chai": "^4.2.6",
    "@types/mocha": "^5.2.7",
    "axios": "^0.20.0",
    "chai": "^4.2.0",
    "commander": "^6.1.0",
    "csv-parse": "^5.5.6",
    "dotenv": "^16.0.1",
    "ethereum-waffle": "^3.0.0",
    "ethereumjs-util": "^7.0.4",
    "ethers": "5.7.2",
    "hardhat": "^2.22.6",
    "mocha": "^6.2.2",
    "prettier": "^2.0.5",
    "rimraf": "^3.0.0",
    "solc": "0.6.11",
    "ts-node": "^8.5.4",
    "typescript": "^3.7.3"
  },
  "engines": {
    "node": ">=16"
  }
}
