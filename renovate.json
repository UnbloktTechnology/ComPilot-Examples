{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:recommended",
    "group:monorepos",
    ":dependencyDashboard",
    ":rebaseStalePrs"
  ],
  "baseBranches": [
    "development"
  ],
  "enabledManagers": [
    "npm",
    "dockerfile",
    "github-actions",
    "kubernetes"
  ],
  "stopUpdatingLabel": "stop-updating",
  "rangeStrategy": "bump",
  "pinDigests": false,
  "semanticCommits": "enabled",
  "semanticCommitScope": "dependencies",
  "semanticCommitType": "chore",
  "dependencyDashboard": true,
  "commitBody": "See associated pull request for more information.",
  "separateMajorMinor": false,
  "prHourlyLimit": 5,
  "updateInternalDeps": true,
  "lockFileMaintenance": {
    "enabled": true
  },
  "vulnerabilityAlerts": {
    "commitMessagePrefix": "chore(renovate): Security update"
  },
  "ignorePaths": [
    ".nvmrc",
    "**/node_modules/**",
    "archive/**"
  ],
  "ignoreDeps": [
    "pnpm"
  ],
  "packageRules": [
    {
      "description": "Link private dependencies to different registry",
      "matchDatasources": [
        "npm"
      ],
      "matchPackagePatterns": [
        "@unblokttechnology/*"
      ],
      "registryUrls": [
        "https://npm.pkg.github.com"
      ]
    },
    {
      "description": "Updates all minor and patch versions",
      "matchPackagePatterns": [
        "*"
      ],
      "matchUpdateTypes": [
        "minor",
        "patch"
      ],
      "groupName": "all non-major dependencies",
      "schedule": [
        "before 4am"
      ]
    },
    {
      "description": "Prevent updating node in Dockerfiles",
      "matchDatasources": [
        "docker"
      ],
      "matchPackagePatterns": [
        "node"
      ],
      "enabled": false
    },
    {
      "description": "List of disabled dependencies",
      "groupName": "bot: disabled dependencies",
      "matchPackageNames": [],
      "enabled": false
    },
    {
      "description": "Automerge non-major updates",
      "matchUpdateTypes": ["minor", "patch", "digest", "lockFileMaintenance"],
      "automerge": false
    }
  ],
  "ignoreUnstable": true,
  "labels": [
    "renovate-bot"
  ],
  "hostRules": [
    {
      "hostType": "npm",
      "matchHost": "https://npm.pkg.github.com/",
      "encrypted": {
        "token": ""
      }
    }
  ],
  "assignees": [
    "krisgrm",
    "markoftw",
    "joelamouche"
  ]
}
